<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./layout/header') %>
</head>
<body>
    <%- include('./layout/navbar') %>
    <header class="banner">
        <h1 class="banner__title">This is <%= pageTitle %> page</h1>
    </header>
    <main class="container">
        <% if(blogs.length > 0){ %>
            <% blogs.map((blog)=>{ %>
                <a href="/details/<%= blog._id %>" class="blog">
                    <h2 class="blog__title"><%= blog.title %></h2>
                    <p class="blog__text"><%= blog.description %></p>
                </a>
            <% }) %>
        <% }else{ %>
            <article class="blog">
                <h2 class="blog__title">No Blogs created</h2>
            </article>
        <% } %>
    </main>
</body>
</html>